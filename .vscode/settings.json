{
  "files.exclude": {
    ".next": true,
    "node_modules": true,
    "next-env.d.ts": true,
    ".swc": true,
    "coverage": true
  },
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  // ESLint
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.onIgnoredFiles": "off",
  "eslint.useESLintClass": true,
  "eslint.lintTask.enable": true,
  "eslint.run": "onType",
  // Prettier
  "prettier.enable": true,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.singleQuote": false,
  "prettier.arrowParens": "always",
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.ignorePath": ".prettierignore",
  "prettier.insertPragma": false,
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 88,
  "prettier.trailingComma": "es5",
  // NPM Intellisense
  "npm-intellisense.importDeclarationType": "const",
  "npm-intellisense.importQuotes": "\"",
  "npm-intellisense.scanDevDependencies": true,
  "npm-intellisense.showBuildInLibs": true,
  // React Components Snippets
  "reactComponentGenerator.createStoriesFile": false,
  "reactComponentGenerator.language": "ts",
  "reactComponentGenerator.stylesLanguage": "scss",
  "reactComponentGenerator.useIndexFile": true,
  // SCSS
  "scss.scanImportedFiles": true,
  "scss.showErrors": true,
  "scss.suggestFunctions": true,
  "scss.suggestMixins": true,
  "scss.suggestVariables": true,
  // TypeScript Imports
  "tsimporter.disabled": false,
  "tsimporter.doubleQuotes": true,
  "tsimporter.emitSemicolon": true,
  "tsimporter.filesToScan": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "tsimporter.preferRelative": false,
  "tsimporter.tsconfigName": "tsconfig.json",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.sortImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.sortImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.sortImports": "explicit"
    }
  }
}
